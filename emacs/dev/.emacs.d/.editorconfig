root = true

[*]
charset = utf-8
end_of_line = lf
max_line_length = 80
trim_trailing_whitespace = true
insert_final_newline = true

[*.{py, rb}]
indent_style = space
indent_size = 4

[lib/**.js]
indent_style = space
indent_size = 2

[*.el]
indent_style = space
max_line_length = 80

[*.{tex,cls,lua}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
tab_width = 4

[.gitmodules]
indent_style = tab
tab_width = 4

[*.yml]
indent_style = space
indent_size = 2

[ert-tests/**/*.ini]
file_type_ext = editorconfig
